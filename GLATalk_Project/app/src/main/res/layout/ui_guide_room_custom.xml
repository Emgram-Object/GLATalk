<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="14dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_rounded_square">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_tittle_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tour_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="관광객 이름"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_square"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="신규 메세지"
            android:textSize="15sp"
            android:textColor="@color/white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tour_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/tour_name_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_info_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        app:layout_constraintTop_toBottomOf="@id/room_tittle_cl"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/tour_lang_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="관광객 언어"
            android:textColor="@color/gray7f7f"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/last_time_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="마지막 대화시간"
            app:layout_constraintTop_toBottomOf="@+id/tour_lang_title_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/room_info_data_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/room_tittle_cl"
        app:layout_constraintLeft_toRightOf="@id/room_info_cl"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tour_lang_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="중국어"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/last_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="2020-05-08(금) 16:40"
            android:textColor="@color/black"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@+id/tour_lang_tv"
            app:layout_constraintLeft_toLeftOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>