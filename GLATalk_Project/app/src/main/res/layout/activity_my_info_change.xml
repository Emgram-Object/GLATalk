<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_info_parent_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.glatalk_project.TitleView
        android:id="@+id/common_title_info_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>


    <ImageView
        android:id="@+id/my_info_profile_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/icon_profile_l"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/common_title_info_change"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_info_cl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_margin"
        android:layout_marginRight="@dimen/layout_margin"

        app:layout_constraintTop_toBottomOf="@id/my_info_profile_iv">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_info_name_cl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:background="@drawable/edit_selector"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:id="@+id/my_info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/my_account_name"
                android:textSize="10sp"
                android:textColor="@color/black5050"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/my_info_chg_name_et"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:background="@null"
                android:text="@{profileData.user_name}"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_info_name"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_info_english_name_cl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:background="@drawable/edit_selector"
            app:layout_constraintTop_toBottomOf="@id/my_info_name_cl">
            <TextView
                android:id="@+id/my_info_english_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="영어이름"
                android:textSize="10sp"
                android:textColor="@color/black5050"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/my_info_chg_english_name_et"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:background="@null"
                android:text="@{profileData.user_english_name}"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_info_english_name"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/warning_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:lineHeight="22sp"
            android:text="*영어이름은 외국인에게 노출됩니다. 영문으로 작성해주세요."
            android:textColor="@color/warning_color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_info_english_name_cl" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_info_phone_cl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:background="@drawable/edit_selector"
            app:layout_constraintTop_toBottomOf="@id/warning_tv">
            <TextView
                android:id="@+id/my_info_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="휴대폰번호"
                android:textSize="10sp"
                android:textColor="@color/black5050"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>
            <EditText
                android:id="@+id/my_info_chg_phone_et"
                android:layout_width="0dp"
                android:layout_height="22dp"
                android:background="@null"
                android:text="@{profileData.user_phone_num}"
                android:inputType="number"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:singleLine="true"
                android:lines="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_info_phone"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_info_country_cl"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="14dp"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:background="@drawable/edit_selector"
            app:layout_constraintTop_toBottomOf="@id/my_info_phone_cl">
            <TextView
                android:id="@+id/my_info_country_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/country"
                android:textSize="10sp"
                android:textColor="@color/black5050"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"/>

            <TextView
                android:id="@+id/my_info_chg_country_select_tv"

                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintTop_toBottomOf="@id/my_info_country_tv"/>
            <ImageView
                android:id="@+id/dropdown_icon_country"
                android:layout_width="13.9dp"
                android:layout_height="7.8dp"
                android:src="@drawable/dropdown_icon_down"
                android:layout_marginTop="24.1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_country_selector_cl"
            android:layout_width="match_parent"
            android:layout_height="164dp"
            android:padding="6dp"
            android:layout_marginTop="4dp"
            android:visibility="gone"
            android:background="@drawable/white_rounded_square"
            app:layout_constraintTop_toBottomOf="@id/my_info_country_cl">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/country_rv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/modify_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:text="@string/btn_modified"
        android:textSize="16sp"
        android:textColor="@color/white_text_color"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>